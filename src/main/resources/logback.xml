<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!-- Suppress Logback internal status output on startup. -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <!-- Use a SYSTEM property so it can be set before logback initializes.
         If not set, default to INFO. -->
    <property scope="system" name="LOG_LEVEL" value="${log.level:-INFO}" />
    <property name="LOG_PATTERN" value="[%d{HH:mm:ss.SS}] [%thread/%level] %logger{36} - %msg%n" />
    <property name="APP_NAME" value="fatin2" />
    <property name="LOG_PATH" value="logs" />

    <!-- Console -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Rolling file appender:
         - current logs -> ${LOG_PATH}/latest.log (Override)
         - archived logs -> ${LOG_PATH}/${APP_NAME}-YYYY-MM-DD-i.log.gz (compressed)
    -->
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/latest.log</file>
        <append>false</append>
        <prudent>false</prudent>
        <immediateFlush>true</immediateFlush>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ROLLING"/>
    </root>
</configuration>